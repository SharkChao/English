<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenovohit.administrator.english">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".activity.MyAppLication"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.LoginActivity"></activity>
        <activity android:name=".activity.ReristerActivity"></activity>
        <activity android:name=".activity.TopActivity2"></activity>
        <activity android:name=".activity.TopActivity1"></activity>
        <activity android:name=".activity.Ttem1Activity"></activity>
        <activity android:name=".activity.Ttem2Activity"></activity>
        <activity android:name=".activity.Ttem3Activity"></activity>
        <activity android:name=".activity.Ttem4Activity"></activity>
        <activity android:name=".activity.Ttem5Activity"></activity>
        <activity android:name=".activity.Ttem6Activity"></activity>
        <activity android:name=".activity.Ttem7Activity"></activity>
        <activity android:name=".activity.VideoActivity"></activity>
        <activity android:name=".activity.TikuActivity"></activity>
        <activity android:name=".activity.StudentInfoActivity"></activity>
        <activity android:name=".activity.StudentInfoSetActivity"></activity>
        <activity android:name=".activity.SijiDetailActivity"></activity>
        <activity android:name=".activity.TingliDetailActivity"></activity>
        <activity android:name=".activity.KouyuDetailActivity"></activity>
        <activity android:name=".activity.CollentActivity"></activity>
        <activity android:name=".activity.DuyinDetailActivity"></activity>
        <activity android:name=".activity.Tiku1Activity"></activity>
    </application>

</manifest>